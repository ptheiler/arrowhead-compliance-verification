<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %logger{36}:%L %-5level - %msg%n" />
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="GrovePi" level="warn">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="org" level="info">
            <AppenderRef ref="Console"/>
        </Logger>
        <Root level="debug">
            <AppenderRef ref="Console" />
        </Root>
    </Loggers>
</Configuration>